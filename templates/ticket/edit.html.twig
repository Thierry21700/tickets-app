{% extends 'base.html.twig' %}

{% block title %}Modifier le Ticket #{{ ticket.id }} - Système de Tickets{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Modifier le Ticket #{{ ticket.id }}
                </h2>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.author, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.author) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.responsible, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.responsible, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.responsible) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                        <div class="form-text">Entre 20 et 250 caractères</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
