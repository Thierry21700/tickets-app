{% extends 'base.html.twig' %}

{% block title %}Gestion des Statuts - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-flag me-2"></i>Gestion des Statuts</h1>
    <a href="{{ path('app_admin_status_new') }}" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouveau statut
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if statuses %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for status in statuses %}
                            <tr>
                                <td>{{ status.id }}</td>
                                <td>
                                    <span class="badge bg-{{ status.name == 'Nouveau' ? 'primary' : (status.name == 'Ouvert' ? 'warning' : (status.name == 'Résolu' ? 'success' : 'secondary')) }}">
                                        {{ status.name }}
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_admin_status_edit', {'id': status.id}) }}" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit me-1"></i>Modifier
                                        </a>
                                        <form method="post" action="{{ path('app_admin_status_delete', {'id': status.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce statut ?')" 
                                              style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash me-1"></i>Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i>Aucun statut trouvé.
            </div>
        {% endif %}
    </div>
</div>

<div class="mt-3">
    <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
    </a>
</div>
{% endblock %}
