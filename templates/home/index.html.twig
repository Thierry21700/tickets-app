{% extends 'base.html.twig' %}

{% block title %}Accueil - Système de Tickets{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">
                    <i class="fas fa-ticket-alt me-2"></i>Créer un nouveau ticket
                </h2>
                <small class="text-muted">Développé par Thierry Goutier</small>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.author, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.author) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                        <div class="form-text">Entre 20 et 250 caractères</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Créer le ticket
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informations
                </h3>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Utilisez ce formulaire pour créer un nouveau ticket de support. 
                    Notre équipe traitera votre demande dans les plus brefs délais.
                </p>
                <hr>
                <h5>Catégories disponibles :</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-bug text-danger me-2"></i>Incident</li>
                    <li><i class="fas fa-tools text-warning me-2"></i>Panne</li>
                    <li><i class="fas fa-rocket text-info me-2"></i>Évolution</li>
                    <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Anomalie</li>
                    <li><i class="fas fa-question-circle text-primary me-2"></i>Information</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
